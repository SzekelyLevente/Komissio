<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:layout_boxedEdges="all">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="csokibiz"
                    android:id="@+id/szoveg"
                    android:gravity="center"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/csokbiz"
                    android:hint="csokibiz"
                    android:layout_below="@id/szoveg"
                    android:inputType="number"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/torles"
                    android:layout_below="@id/csokbiz"
                    android:text="törlés" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tart"
                    android:layout_below="@id/torles"
                    android:text="tartalékos"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tart"
                    android:text="tartalékos zóna"
                    android:id="@+id/tartzona"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tartzona"
                    android:id="@+id/kezdocimke"
                    android:inputType="number"
                    android:hint="kezdőcímke"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/kezdocimke"
                    android:id="@+id/db"
                    android:inputType="number"
                    android:hint="db"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/db"
                    android:id="@+id/ujkor"
                    android:text="új kör"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tartalycimkek"
                    android:orientation="vertical"
                    android:layout_below="@id/ujkor">



                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tartalycimkek"
                    android:text="névjegy"
                    android:id="@+id/nevjegy"/>

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>